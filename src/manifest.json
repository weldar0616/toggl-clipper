{
  "name": "Toggl Clipper",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Toggl Clipper",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://toggl.com/*"],
  "action": {
    "default_title": "今日の作業記録を取得する",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  }
}
